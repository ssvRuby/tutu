<h1>Покупка билета</h1>
<div class="row">
  <div class="col-md-4">
    <table class="table table-bordered">
      <tbody align="left">
      <tr>
        <th>Номер поезда:</th>
        <td><%= @train.number %></td>
      </tr>
      <tr>
        <th>Маршрут:</th>
        <td><%= @train.route.title %></td>
      </tr>
      <tr>
        <th>Станция отправления:</th>
        <td><%= @start_station.title %></td>
      </tr>
      <tr>
        <th>Станция назначения:</th>
        <td><%= @end_station.title %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<br/>


<div class="row">
  <div class="col-md-4">
    <h2>Данные пассажира:</h2>

    <%= form_for(@ticket) do |f| %>

        <%= render 'common/errors', resource: @ticket %>
        <%= f.hidden_field :train_id %>
        <%= f.hidden_field :start_station_id %>
        <%= f.hidden_field :end_station_id %>

        <div>
          <%= f.label :passenger_name %>
          <%= f.text_field :passenger_name, class: "form-control" %>
        </div>

        <div>
          <%= f.label :passport_number %>
          <%= f.text_field :passport_number, class: "form-control" %>
        </div>
<br/>
        <div>
          <%= f.submit 'Купить!', class: 'btn btn-success' %>
        </div>
    <% end %>

</div>
</div>
<p>
  <%= link_to 'Список билетов', tickets_path, class: 'btn btn-link' %> |
  <%= link_to 'Новый поиск', search_path, class: 'btn btn-link' %>
</p>
