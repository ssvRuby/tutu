<h2>Информация о поезде</h2>

<p>
  <label>Поезд номер:</label>
  <%= @train.number %>
</p>

<p>
  <strong>Количество вагонов:</strong>
  <%= @train.carriages.length %>
</p>
<p>
  <strong>Список вагонов:</strong>
<ul>
  <% @train.carriage_list.each do |c| %>
      <li>
        <%= link_to "Вагон № #{c.number}", admin_carriage_path(c) %>
      </li>
  <% end %>
</ul>
</p>
<p>
  <strong>Количество вагонов по типам:</strong>
<ul>
  <% @train.carr_by_type.each do |t| %>
      <li>
        <%= "#{t[0]} -- #{t[1]} " %>
        <% @train.places_by_type(t[0]).each do |p| %>
            <%= "#{p[0]}: #{p[1]}" %>
        <% end %>
      </li>
  <% end %>
</ul>
</p>
<p>
  <strong>Маршрут:</strong>
  <% if @train.route.present? %>
      <%= @train.route.title %>
  <% else %>
      Маршрут не назначен
  <% end %>
</p>
<p>
  <strong>На станции:</strong>
  <% if @train.current_station.present? %>
      <%= @train.current_station.title %>
  <% else %>
      Не указано
  <% end %>
</p>
<p>
  <%= link_to 'Добавить вагон', new_admin_train_carriages_path(@train), class: "btn btn-success" %>
</p>
<%= link_to 'Редактировать', edit_admin_train_path(@train), class: "btn btn-link" %> |
<%= link_to 'Назад', admin_trains_path, class: "btn btn-link" %>
