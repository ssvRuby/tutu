<%= form_for [:admin, route], html: { style: "display: #{hidden ? 'none' : 'block'}"} do |f| %>
    <%= render 'common/errors', resource: route %>

    <div class="field">
      <%= f.label 'Наименование' %>
      <%= f.text_field :title%>
    </div>

    <div class="actions">
      <%= f.submit "#{route.new_record? ? 'Создать' : 'Изменить'}", class: 'btn btn-success' %>
    </div>

<% end %>

