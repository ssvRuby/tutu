<!--<h2>Sign up</h2>-->
<h2><%= t('.title') %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-2">
        <%= f.label :first_name %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :last_name %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-4">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-2">
        <%= f.label t'.password' %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t'.characters_minimum'%>)</em>
        <% end %>
      </div>
      <div class="col-md-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-2">
        <%= f.label t'.password_confirmation' %><br/>
      </div>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
    <br/>
    <datagrid></datagrid>

    <div class="actions">
      <%= f.submit t('.submit'), class: "btn btn-info" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
