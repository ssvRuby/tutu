<% carriages.each do |c| %>
    <tr>
      <td><%= c.number %></td>
      <td><%= c.type %></td>
      <td><%= c.carriage_type %></td>
      <td><%= link_to 'Показать', carriage_path(c) %></td>
      <td><%= link_to 'Редактировать', edit_carriage_path(c) %></td>
      <td><%= link_to 'Удалить', carriage_path(c) , method: :delete, data: { confirm: 'Вы уверены?' }%></td>
    </tr>
<% end %>